{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/api/values",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9021
        }
      ],
      "UpstreamPathTemplate": "/OAuth",
      "UpstreamHttpMethod": [ "POST", "PUT", "GET" ]
    },
    {
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9051
        }
      ],
      "UpstreamPathTemplate": "/superticket-api/{url}" //,
      // "SwaggerKey": "superticketApi"
    },

    {
      // "UpstreamPathTemplate": "/superticket-api/getareas/{areaId}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9051
        }
      ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/v1/Area/{id}",
      "UpstreamPathTemplate": "/api/v1/Area/{id}",
      "Key": "AreaById"
    },
    {
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9051
        }
      ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/v1/Seat/GetByAreaId/{id}",
      "UpstreamPathTemplate": "/api/v1/Seat/GetByAreaId/{id}",
      "Key": "SeatByAreaId"
    }
  ],

  "Aggregates": [
    {
      "ReRouteKeys": [
        "AreaById",
        "SeatByAreaId"
      ],
      "UpstreamPathTemplate": "/api/{id}"
    }
  ],
