    <repository url="http://github.com/JeremySkinner/fluentvalidation" />
    <dependencies>
      <group targetFramework=".NETStandard2.0">
        <dependency id="FluentValidation" version="8.1.2" exclude="Build,Analyzers" />
        <dependency id="Microsoft.AspNetCore.Mvc" version="2.1.0" exclude="Build,Analyzers" />
      </group>
    </dependencies>
  </metadata>
</package>